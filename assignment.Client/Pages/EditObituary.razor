@page "/obituaries/edit/{Id:int}"
@using assignment.Client.Models
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Authorization
@inject assignment.Client.Services.IObituariesService ObituariesService
@inject NavigationManager NavManager
@inject HttpClient Http

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized Context="authState">
            <h3>Edit Obituary</h3>

            @if (isLoading)
            {
                <p>Loading obituary...</p>
            }
            else if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }
            else
            {
                @if (!string.IsNullOrEmpty(formError))
                {
                    <div class="alert alert-danger">@formError</div>
                }

                <EditForm EditContext="_editContext" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />

                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <InputText class="form-control" @bind-Value="model.FullName" />
                        <ValidationMessage For="@(() => model.FullName)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Date of Birth</label>
                        <InputDate class="form-control" @bind-Value="model.DOB" />
                        <ValidationMessage For="@(() => model.DOB)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Date of Death</label>
                        <InputDate class="form-control" @bind-Value="model.DOD" />
                        <ValidationMessage For="@(() => model.DOD)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Biography / Tribute</label>
                        <InputTextArea class="form-control" rows="5" @bind-Value="model.Biography" />
                        <ValidationMessage For="@(() => model.Biography)" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label d-block">Current Photo</label>
                        @if (!string.IsNullOrEmpty(existingPhotoPath))
                        {
                            <img src="@GetPhotoUrl(existingPhotoPath)"
                                 alt="Current photo"
                                 class="img-thumbnail mb-2"
                                 style="max-width: 150px; max-height: 150px;" />
                        }
                        else
                        {
                            <p class="text-muted">No photo uploaded.</p>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label">New Photo (optional)</label>
                        <InputFile OnChange="OnPhotoSelected" />
                        <small class="text-muted d-block mb-2">Leave empty to keep the existing photo.</small>

                        @if (!string.IsNullOrEmpty(previewImageUrl))
                        {
                            <div class="mt-2">
                                <span class="text-muted d-block">New photo preview:</span>
                                <img src="@previewImageUrl"
                                     alt="New photo preview"
                                     class="img-thumbnail"
                                     style="max-width: 150px; max-height: 150px;" />
                            </div>
                        }
                    </div>

                    <button class="btn btn-primary" type="submit" disabled="@isSubmitting">
                        @(isSubmitting ? "Saving..." : "Save Changes")
                    </button>
                    <button class="btn btn-secondary ms-2" type="button" @onclick="GoBack">
                        Cancel
                    </button>
                </EditForm>
            }
        </Authorized>
        <NotAuthorized>
            <div class="alert alert-warning mt-3">
                You must be logged in to edit this obituary.
            </div>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

@code {
    [Parameter] public int Id { get; set; }

    private UpdateObituaryRequest model = new();
    private IBrowserFile? photoFile;

    private EditContext _editContext = default!;
    private ValidationMessageStore? _messageStore;

    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;
    private string? formError;

    private string? existingPhotoPath;
    private string? previewImageUrl;

    protected override async Task OnParametersSetAsync()
    {
        isLoading = true;
        errorMessage = null;
        formError = null;

        try
        {
            var obituary = await ObituariesService.GetObituaryAsync(Id);
            if (obituary == null)
            {
                errorMessage = "Obituary not found.";
            }
            else
            {
                model.FullName = obituary.FullName;
                model.DOB = obituary.DOB;
                model.DOD = obituary.DOD;
                model.Biography = obituary.Biography;
                existingPhotoPath = obituary.PhotoPath;

                if (_editContext == null)
                {
                    _editContext = new EditContext(model);
                    _messageStore = new ValidationMessageStore(_editContext);
                    _editContext.OnFieldChanged += HandleFieldChanged;
                }
                else
                {
                    // If EditContext was already created in a previous parameter set, reassign model target.
                    _editContext = new EditContext(model);
                    _messageStore = new ValidationMessageStore(_editContext);
                    _editContext.OnFieldChanged += HandleFieldChanged;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading obituary: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleFieldChanged(object? sender, FieldChangedEventArgs e)
    {
        if (_messageStore == null)
            return;

        _messageStore.Clear(e.FieldIdentifier);
        formError = null;
        _editContext.NotifyValidationStateChanged();
    }

    private async Task OnPhotoSelected(InputFileChangeEventArgs e)
    {
        photoFile = e.File;
        previewImageUrl = null;

        if (photoFile is not null)
        {
            using var stream = photoFile.OpenReadStream(2 * 1024 * 1024); // 2 MB for preview
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);

            var bytes = ms.ToArray();
            var base64 = Convert.ToBase64String(bytes);
            previewImageUrl = $"data:{photoFile.ContentType};base64,{base64}";
        }
    }

    private async Task HandleValidSubmit()
    {
        isSubmitting = true;
        formError = null;
        _messageStore?.Clear();

        var result = await ObituariesService.UpdateObituaryAsync(Id, model, photoFile);
        isSubmitting = false;

        if (result.Success)
        {
            NavManager.NavigateTo($"/obituaries/{Id}");
            return;
        }

        formError = result.ErrorMessage ?? "Failed to update obituary.";

        if (_messageStore != null && result.FieldErrors.Any())
        {
            foreach (var kvp in result.FieldErrors)
            {
                var fieldIdentifier = new FieldIdentifier(model, kvp.Key);
                foreach (var error in kvp.Value)
                {
                    _messageStore.Add(fieldIdentifier, error);
                }
            }

            _editContext.NotifyValidationStateChanged();
        }
    }

    private string GetPhotoUrl(string? photoPath)
    {
        if (string.IsNullOrWhiteSpace(photoPath))
            return string.Empty;

        if (photoPath.StartsWith("http", StringComparison.OrdinalIgnoreCase))
            return photoPath;

        var baseUri = Http.BaseAddress?.ToString() ?? string.Empty;
        if (!baseUri.EndsWith("/"))
        {
            baseUri += "/";
        }

        var relative = photoPath.TrimStart('/');
        return $"{baseUri}{relative}";
    }

    private void GoBack()
    {
        NavManager.NavigateTo($"/obituaries/{Id}");
    }
}
