@page "{id:int}"
@model ObituaryApplication.Pages.Obituaries.DeleteModel
@{
    ViewData["Title"] = "Delete Obituary";
}

<h2>Delete Obituary</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this obituary?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Obituary.FullName</h5>
        <p><strong>Date of Birth:</strong> @Model.Obituary.DOB.ToShortDateString()</p>
        <p><strong>Date of Death:</strong> @Model.Obituary.DOD.ToShortDateString()</p>
        
        @if (!string.IsNullOrEmpty(Model.Obituary.PhotoPath))
        {
            <div class="mb-2">
                <img src="@Model.Obituary.PhotoPath" alt="@Model.Obituary.FullName" style="max-width: 200px;" class="img-thumbnail" />
            </div>
        }
        
        <div>
            <strong>Biography:</strong>
            <p>@Model.Obituary.Biography</p>
        </div>
    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Obituary.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-page="/Obituaries/Details" asp-route-id="@Model.Obituary.Id" class="btn btn-secondary">Cancel</a>
</form>