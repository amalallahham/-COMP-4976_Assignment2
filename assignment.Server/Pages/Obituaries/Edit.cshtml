@page "{id:int}"
@model ObituaryApplication.Pages.Obituaries.EditModel
@{
    ViewData["Title"] = "Edit Obituary";
}

<h2>Edit Obituary</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Obituary.Id" />
    <input type="hidden" asp-for="Obituary.CreatorId" />
    <input type="hidden" asp-for="Obituary.PhotoPath" />
    
    <div class="form-group">
        <label asp-for="Obituary.FullName" class="form-label"></label>
        <input asp-for="Obituary.FullName" class="form-control" />
        <span asp-validation-for="Obituary.FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Obituary.DOB" class="form-label"></label>
        <input asp-for="Obituary.DOB" type="date" class="form-control" />
        <span asp-validation-for="Obituary.DOB" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Obituary.DOD" class="form-label"></label>
        <input asp-for="Obituary.DOD" type="date" class="form-control" />
        <span asp-validation-for="Obituary.DOD" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Obituary.Biography" class="form-label"></label>
        <textarea asp-for="Obituary.Biography" class="form-control" rows="6"></textarea>
        <span asp-validation-for="Obituary.Biography" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.Obituary.PhotoPath))
    {
        <div class="form-group">
            <label>Current Photo:</label>
            <div>
                <img src="@Model.Obituary.PhotoPath" alt="Current photo" style="max-width: 200px;" class="img-thumbnail" />
            </div>
        </div>
    }

    <div class="form-group">
        <label>Upload New Photo (optional):</label>
        <input type="file" asp-for="Photo" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-page="/Obituaries/Details" asp-route-id="@Model.Obituary.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}