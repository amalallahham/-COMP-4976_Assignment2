@page
@model ObituaryApplication.Pages.RegisterModel
@{
    ViewData["Title"] = "Register Obituary";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Register Obituary</h2>
            <p class="text-muted">Fill out the information below to create an obituary record</p>

            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Input.FullName" class="form-label"></label>
                    <input asp-for="Input.FullName" class="form-control" placeholder="Enter the full name of the deceased" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Input.DOB" class="form-label">Date of Birth</label>
                            <input asp-for="Input.DOB" type="date" class="form-control" />
                            <span asp-validation-for="Input.DOB" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Input.DOD" class="form-label">Date of Death</label>
                            <input asp-for="Input.DOD" type="date" class="form-control" />
                            <span asp-validation-for="Input.DOD" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Biography" class="form-label">Biography / Tribute</label>
                    <textarea asp-for="Input.Biography" class="form-control" rows="6" placeholder="Share memories, achievements, and what made this person special..."></textarea>
                    <span asp-validation-for="Input.Biography" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Photo (optional)</label>
                    <input type="file" asp-for="Input.Photo" class="form-control" accept="image/*" />
                    <small class="form-text text-muted">Upload a photo to remember them by</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Email" class="form-label">Your Email (for contact purposes)</label>
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="your.email@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <small class="form-text text-muted">This will not be displayed publicly</small>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Input.Password" class="form-label">Password (to manage this obituary later)</label>
                    <input asp-for="Input.Password" type="password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <small class="form-text text-muted">You can use this to edit or delete the obituary later</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Create Obituary</button>
                    <a asp-page="/Obituaries/Index" class="btn btn-secondary">View All Obituaries</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}